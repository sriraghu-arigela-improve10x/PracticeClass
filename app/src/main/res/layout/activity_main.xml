<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#00BCD4"
    android:padding="12dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/sum_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="Sum"
                android:textAllCaps="false"
                android:textColorLink="#00BCD4" />

            <Button
                android:id="@+id/toast_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="Toast"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/custom_toast_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="Custom Toast"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/toggle_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="ToggleBtn"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/radio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="RadioBtn"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/check_box_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="CheckboxBtn"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/ratingbar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="RatingBar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/seekbar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="Seekbar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/datepicker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="DatePicker"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/time_picker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="TimePicker"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/progress_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="ProgressBtn"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/vertical_scroll_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="VerticalScrollBtn"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/horizontal_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="HorizontalScrollBtn"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/image_switcher_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="Image Switcher"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/alert_dialog_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="AlertDialog"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>